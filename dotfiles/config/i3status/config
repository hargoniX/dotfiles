general {
    output_format = "i3bar"
    colors = true
    interval = 1
}

order += "disk /"
order += "ethernet eth0"
order += "tztime local"

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

disk "/" {
        format = "%free"
}
